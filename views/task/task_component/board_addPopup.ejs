              document.querySelectorAll('.remove-tag').forEach(removeBtn => {
                removeBtn.addEventListener('click', function () {
                  const tagToRemove = this.getAttribute('data-tag');
                  selectedTags = selectedTags.filter(tag => tag !== tagToRemove);
                  renderSelectedTags();
                });
              });
            }
          
            // Initialize tags
            await fetchTags();
          });
          
